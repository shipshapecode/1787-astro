---
const images = [
  '/img/space/1.png',
  '/img/space/2.png',
  '/img/space/3.png',
  '/img/space/4.png',
  '/img/space/5.png'
];
---

<div class="bg-cream flex justify-center w-full" id="about">
  <div class="flex justify-center max-w-6xl py-20 w-full lg:py-32">
    <div class="grid grid-cols-1 gap-x-28 p-6 w-full lg:grid-cols-2">
      <div class="flex flex-col">
        <div class="flex-grow">
          <h2 class="text-4xl text-dark-green lg:text-6xl">
            Headline goes here
          </h2>

          <p class="text-dark-green">Lorem ipsum more text goes here</p>
        </div>

        <div class="hidden justify-self-end lg:block">
          01/05
          <button onclick="swiper.slidePrev()">Prev</button>
          <button onclick="swiper.slideNext()">Next</button>
        </div>
      </div>

      <div>
        <div class="swiper lg:w-[675px]">
          <div class="swiper-wrapper">
            {images.map((image) => (
              <div class="swiper-slide !h-72 !w-72 lg:!h-[525px] lg:!w-[525px]">
                <img class="h-full w-full object-cover" src={image} />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module">
  import Swiper from 'swiper';

  import 'swiper/css';

  const swiper = new Swiper('.swiper', {
    loop: true,
    slideToClickedSlide: true,
    slidesPerView: 'auto',
    spaceBetween: 24
  });

  window.swiper = swiper;
</script>
