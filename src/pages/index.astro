---
import Contact from '../components/Contact.astro';
import NavMenu from '../components/NavMenu.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="preload"
      as="font"
      href="/fonts/BolognaBlack.woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/SurtNormal-Bold.woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/SurtNormal-Regular.woff2"
      crossorigin="anonymous"
    />

    <title>1787 Middleburg Coworking Space</title>

    <meta property="og:site_name" content="1787 Coworking" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="1787 Middleburg Coworking Space" />
    <meta property="og:url" content="https://1787.work/" />
    <meta property="og:image" content="/img/logo.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:height" content="229" />
    <meta property="og:image:width" content="220" />
    <meta
      property="og:description"
      content="1787 is Middleburg's first coworking space. We have a dedicated fiber internet connection, a convenient location in downtown Middleburg, and many membership plans to choose from."
    />
    <meta
      name="description"
      content="1787 is Middleburg's first coworking space. We have a dedicated fiber internet connection, a convenient location in downtown Middleburg, and many membership plans to choose from."
    />

    <style lang="scss" global>
      @import '../styles/global.scss';
    </style>
  </head>

  <body class="bg-dark-green border-[12px] border-gold h-full w-full">
    <NavMenu />

    <main>
      <div class="flex justify-center">
        <div class="flex justify-center max-w-6xl py-20 w-full lg:py-32">
          <div>
            <h1 class="p-6 text-5xl text-center text-gold lg:py-32 lg:text-8xl">
              Middleburg's first coworking space
            </h1>

            <div class="flex justify-center w-full">
              <img alt="" height="100px" src="/img/1787-keys.png" width="100px"
              />
            </div>
          </div>
        </div>
      </div>

      <div class="bg-cream flex justify-center w-full" id="about">
        <div class="flex justify-center max-w-6xl py-20 w-full lg:py-32">
          <div class="grid grid-cols-2 p-6 w-full">
            <div>
              <h2 class="text-4xl text-dark-green lg:text-6xl">
                Headline goes here
              </h2>

              <p class="text-dark-green">Lorem ipsum more text goes here</p>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-center w-full" id="perks">
        <div class="flex justify-center max-w-6xl py-20 w-full lg:py-32">
          <div class="grid grid-cols-1 p-6 w-full lg:grid-cols-3">
            <h2 class=" text-4xl text-white lg:col-span-1 lg:text-6xl">
              Why 1787?
            </h2>

            <div class="lg:col-span-2">
              <ul class="grid grid-cols-1 gap-12 lg:grid-cols-2">
                <li>
                  <img class="mb-4" src="/svgs/icons/pin.svg" />
                  <h3 class="text-gold text-2xl">Location</h3>
                </li>
                <li>
                  <img class="mb-4" src="/svgs/icons/lightning.svg" />
                  <h3 class="text-gold text-2xl">High-speed Internet</h3>
                </li>
                <li>
                  <img class="mb-4" src="/svgs/icons/snacks.svg" />
                  <h3 class="text-gold text-2xl">Snacks & Drinks</h3>
                </li>
                <li>
                  <img class="mb-4" src="/svgs/icons/bookable.svg" />
                  <h3 class="text-gold text-2xl">Bookable Spaces</h3>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <Pricing />
      <Contact />
    </main>

    <Footer />
  </body>
</html>
